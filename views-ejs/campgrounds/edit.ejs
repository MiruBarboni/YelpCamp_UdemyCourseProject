<% layout('views-ejs/layouts/boilerplate')%>

<div class="row">
	<h1 class="text-center">Edit Campground</h1>
	<div class="col-md-6 offset-md-3">
		<form
			action="/campgrounds/<%=campground._id%>?_method=PUT"
			method="POST"
			novalidate
			class="needs-validation"
			enctype="multipart/form-data"
		>
			<div class="mb-3">
				<label class="form-label" for="title">Title</label>
				<input
					type="text"
					name="campground[title]"
					id="title"
					value="<%=campground.title%> "
					class="form-control"
					required
				/>
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Location</label>
				<input
					type="text"
					name="campground[location]"
					id="location"
					value="<%=campground.location%>"
					class="form-control"
					required
				/>
			</div>

			<div class="mb-3">
				<label class="form-label" for="image">Add more image(s)...</label>
				<input
					type="file"
					class="form-control"
					id="image"
					name="image"
					id=""
					multiple
				/>
			</div>
			<div class="mb-3">
				<% campground.images.forEach(function(img,i){ %>

				<img
					crossorigin="anonymous"
					src="<%=img.thumbnail%> "
					class="img-thumbnail"
					alt=""
				/>
				<div class="form-check-inline">
					<input
						type="checkbox"
						name="deleteImages[]"
						value="<%=img.filename%>"
						id="image-<%=i%>"
					/>
				</div>
				<label for="image-<%=i%>">Delete?</label>
				<% }) %>
			</div>

			<div class="mb-3">
				<label class="form-label" for="description">Description</label>
				<textarea
					name="campground[description]"
					id="description"
					class="form-control"
					required
				>
<%=campground.description%></textarea
				>
			</div>

			<div class="mb-3">
				<label class="form-label" for="price">Price </label>
				<div class="input-group">
					<span class="input-group-text" id="price-label">$</span>
					<input
						type="text"
						name="campground[price]"
						value="<%=campground.price%>"
						area-describedby="price-label"
						area-label="price"
						class="form-control"
						required
					/>
				</div>
			</div>
			<div class="mb-3">
				<button class="btn btn-info text-light">Update campground</button>
			</div>
		</form>
		<a href="/campgrounds">Back to campgrounds</a>
	</div>
</div>
